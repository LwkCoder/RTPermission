<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_permission_logo"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_unkonw_permission"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_permission_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/permission_unkown"
            android:textColor="@color/black_rtdialog"
            android:textSize="16sp"
            android:typeface="monospace"/>

        <TextView
            android:id="@+id/tv_permission_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rationale_unknow"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"/>
    </LinearLayout>

</LinearLayout>